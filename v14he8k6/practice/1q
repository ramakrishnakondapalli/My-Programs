void dec_bin(int num)
{
int i=1,rem=1,sum=0;
while(num>0)
{
   rem=num%2;printf("rem:%d ");
   sum=sum+rem*i;printf(" %d",sum);
   i=i*10;
   //num=num/10;
}
printf("%d",sum);



}




