#include"headers.h"
#include<pwd.h>
#include<dirent.h>
#include<locale.h>
main(int argc,char **argv)
{
DIR *dp;
char d_name[20];
struct stat v;
struct dirent *ptr;
struct passwd *p;

if(argc==2)
  dp=opendir(argv[1]);
else
  dp=opendir("./");
while(ptr=readdir(dp))
{
  stat("ptr->d_name",&v);
  p=getpwuid(v.st_uid);  
  
  printf("\n%s\t",ptr->d_name);
  printf("%s",v.st_uid);
//  printf("%s  %s  %d %s %s",p->pw_name,p->pw_uid,p->pw_gid,v.st_blksize,ptr->d_name );
  
}
closedir(dp);

}
