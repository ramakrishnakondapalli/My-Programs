#include"headers.h"
#include<locale.h>
#include<pwd.h>
#include<dirent.h>
main()
{
  DIR *dp;
  struct dirent *ptr;
  struct stat buf;
  struct passwd *p;
  char d_name[20];
  int d_ino;
  dp=opendir("./");
   //printf(" %s",ptr->d_name);
  while(ptr=readdir(dp))
    {
       
      lstat("ptr->d_name\t",&buf);
       p=getpwuid(buf.st_uid);  
     printf("%d",buf.st_uid);    
   printf("%s\t %s\t %s\t %d\t ",p->pw_name,p->pw_uid,p->pw_gid,buf.st_blksize);
       printf("%s\n",ptr->d_name); 
      
    }
  closedir(dp);

}
