#include<iostream>
#include<cstring>
using namespace std;
class student
{
 protected:int roll;
 protected:char *name;
    public:student()
         {
       cout<<"In default constructor:"<<endl;
         }
          student(int r,char *str)
           {
            cout<<"In parametarised constructor:"<<endl;
             roll=r;
             name=str;
            }
      void display()
        {
          cout<<"student details are:"<<endl;
          cout<<"NAME:"<<name<<"roll:"<<roll<<endl;
         }
       ~ student()   
        {
            cout<<"In parent Destructor:"<<endl;
        }
     
};
class Department:protected student
{
int marks;

 public:Department(float f)
   {
     cout<<"In Child Default Constructor"<<endl;
        marks=f;
   }
      
        
      
  void display()
   {
      cout<<"In child display:"<<endl;
     cout<<"student details are:"<<endl;
     cout<<"Name:"<<endl<<name<<"roll:"<<roll<<"Marks:"<<marks<<endl;
   }
};
main()
{
Department s1(1,"ramakrishna",71.2);
s1.display();



}
